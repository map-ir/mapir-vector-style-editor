{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "DOM.Iterable"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "src/",
    "paths": {
      "assets/*": ["assets/*"],
      "common/*": ["common/*"],
      "components/*": ["components/*"],
      "atoms/*": ["atoms/*"],
      "hooks/*": ["hooks/*"],
      "utils/*": ["utils/*"],
      "styles/*": ["styles/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "custom.d.ts"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "demo",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest"
  ],
  "types": ["typePatches"]
}
